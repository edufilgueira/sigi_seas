  <div class="form-group" style="border: solid 1px #e7eaec;padding: 20px 10px 15px 5px;margin: 0px 0px 0px 0px; margin-right: 34%;">
  <label style = 'margin-left: 16px;'>Pesquisar por cpf:</label>
  <div class="col-sm-8" style="width: 100%;">
    <%= text_field_tag :cpf, nil, placeholder: 'Digite um CPF', :class => 'form-control', style: 'width: 252px; float: left;margin-right: 5px;' %>
    <a id="pesquisar" class="btn btn-primary">Pesquisar</a>
    <%= link_to_new new_pessoa_path, id: 'nova_pessoa', class: 'btn btn-warning' %>
  </div> 
    <br><span id="resultado" style="padding: 0px 0px 0px 17px;"></span> 
  </div>
  
  <br>
  <%= form_for([:admin, @usuario], html: { class: 'form-horizontal' }) do |f| %>
    <%= render 'layouts/error_messages', model_name: @usuario %>
  
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.label :pessoa_id, class: 'required' %>
      <%= f.collection_select :pessoa_id, @pessoas_disponiveis, :id, :nome, {prompt: 'Selecione uma pessoa'}, :class => 'form-control', required: 'required' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.label :email, class: 'required' %>
      <%= f.text_field :email, :class => 'form-control', placeholder: 'Email', required: 'required' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.label :permissao_id %>
      <%= f.select :permissao_id, Permissao.all.collect{|p| [p.perfil, p.id]}, {include_blank: '--'}, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to I18n.t('helpers.links.cancel'), admin_usuarios_path, class: 'btn  btn-warning' %>
    </div>
  </div>
<% end %>
