<% content_for :title do %>
  <%= I18n.t('.title', default: [:'helpers.titles.new'], model: @usuario.class.model_name.human) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= I18n.t('.title', default: [:'helpers.titles.new'], model: @usuario.class.model_name.human) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= render partial: 'form', locals: { disable_with: 'Salvando...', usuario: @usuario } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
