
<div class="page-header" style="border: none">
  <h4>Funções do Usuário: <b> <%= @usuario.name %></b> / Área: <b><%= @usuario.area.name %></b></h4>
  <hr/>
</div>
<%= form_for @usuario, url: admin_usuario_apply_functions_path(@usuario), method: :post do |f| %>
  <div class="form-group">
    <%= f.label :functions_id, 'Funções:' %>
    <%= f.collection_select(:functions_id, Function.all , :id , :name , {}, {class: 'select2tags', multiple: true, selected: @usuario.functions.map(&:id)}) %>
  </div>
  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-success' %>
    <%= link_to I18n.t('helpers.links.cancel'), admin_usuarios_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

