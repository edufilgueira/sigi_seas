$("#gestor_area_id").val("<%= @areas.first&.nome_pessoa %>")
$("#servico_realizado_gestor_area_id").val("<%= @areas.first&.id %>")
if ("<%= @areas.first&.nome_pessoa %>" != ""){
  $(".gestor_area_id").css('display', 'none')
  $(".gestor_area_id").parent().removeClass('control-group error')
}
else {
  $(".gestor_area_id").css('display', 'block')
  $(".gestor_area_id").parent().addClass('control-group error')
}
