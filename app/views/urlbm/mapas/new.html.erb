<% content_for :title do %>
  <%= t('.title', default: [:"helpers.titles.#{params[:action]}"], model: Urlbm::Mapa.model_name.human.capitalize) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('.title', default: [:"helpers.titles.#{params[:action]}"], model: Urlbm::Mapa.model_name.human.capitalize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= render partial: 'form', locals: { disable_with: 'Salvando...' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(".select3 ").change(function () {
    var selectedMedida = $(this).children("option:selected").val();
    switch (selectedMedida) {
        case '1':
            $("#doc-guia-cnj").show();
            $("#doc-certidao-antecedentes").show();
            $("#doc-pessoais").show();
            $("#doc-decisao-interlocutoria").show();
            $("#doc-pedido-internacao-provisoria").show();
            $("#doc-malote-digital").show();
            break;
        case '2':
            $("#doc-guia-cnj").show();
            $("#doc-certidao-antecedentes").show();
            $("#doc-pessoais").show();
            $("#doc-decisao-interlocutoria").show();
            $("#doc-pedido-internacao-provisoria").show();
            $("#doc-malote-digital").hide();
            break;
        case 'defalt':
            $("#doc-guia-cnj").show();
            $("#doc-certidao-antecedentes").show();
            $("#doc-pessoais").show();
            $("#doc-decisao-interlocutoria").show();
            $("#doc-pedido-internacao-provisoria").show();
            $("#doc-malote-digital").show();
            break;
    }
});
</script>