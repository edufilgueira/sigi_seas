<%- model_class = Urlbm::AtoInfracional -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.urlbm_ato_infracional', default: Urlbm::AtoInfracional.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.urlbm_ato_infracional', default: Urlbm::AtoInfracional.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_urlbm_ato_infracional_path, class: "btn btn-w-m btn-success" %>
            <%= link_to 'Retornar Mapa', urlbm_mapas_path, class: "btn btn-w-m btn-success" %>

            
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:tipo) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @urlbm_ato_infracionais.each do |urlbm_ato_infracional| %>
                <tr>
                                    <td><%= urlbm_ato_infracional.tipo %></td>
                                    <td>
                    <%= link_to_show(urlbm_ato_infracional) %>
                    <%= link_to_edit(edit_urlbm_ato_infracional_path(urlbm_ato_infracional)) %>
                    <%= link_to_delete(urlbm_ato_infracional) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
