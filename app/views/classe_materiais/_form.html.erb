<%= form_for(@classe_material, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @classe_material %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <%= f.label :grupo_material_id, class: 'col-sm-2' %>
    <div class="col-sm-8">
      <%= f.collection_select :grupo_material_id, GrupoMaterial.all, :id, :nome, {prompt: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :codigo, class: 'col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :codigo, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nome, class: 'col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), classe_materiais_path, class: 'btn' %>
    </div>
  </div>
<% end %>
