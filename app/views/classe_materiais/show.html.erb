<div class="card">
  <div class="card-header">
    <%= t('.title', default: @classe_material.class.model_name.human ) %>
  </div>
  <div class="card-body">
    <table class="table table-condensed">
      <thead>
      <tr>
                    <th><%= ClasseMaterial.human_attribute_name :grupo_material %></th>
                    <th><%= ClasseMaterial.human_attribute_name :codigo %></th>
                    <th><%= ClasseMaterial.human_attribute_name :nome %></th>
              </tr>
      </thead>
      <tbody>
      <tr>
                    <td style="min-width: 90px; word-break: break-all;"><%= @classe_material.grupo_material %></th>
                    <td style="min-width: 90px; word-break: break-all;"><%= @classe_material.codigo %></th>
                    <td style="min-width: 90px; word-break: break-all;"><%= @classe_material.nome %></th>
              </tr>
      </tbody>
    </table>
  </div>
</div>

<%= link_to('Listar', classe_materiais_path, class: 'btn btn-default') %>
<%= link_to 'Editar', edit_classe_material_path(@classe_material), class: 'btn btn-detran-primary' %>
