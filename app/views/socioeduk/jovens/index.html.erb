<%- model_class = Socioeduk::Jovem -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_jovem', default: Socioeduk::Jovem.model_name.human.pluralize.titleize) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <h1><%= I18n.t('titles.socioeduk_jovens') %></h1>
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= render partial: 'busca_jovem' %>
            <%= link_to_new new_socioeduk_jovem_path %>
            <a href="/socioeduk/jovens.csv"><%= image_tag("csv.png", size:"42", style:"float:right") %></a>
            <table class="table table-hover table-sm sortable">
              <thead>
                <tr>
                  <th>Prontu√°rio</th>
                  <th><%= model_class.human_attribute_name(:nome) %></th>
                  <th><%= model_class.human_attribute_name(:apelido) %></th>
                  <th><%= model_class.human_attribute_name(:nome_mae) %></th>
                  <!--
                  <th><%#= model_class.human_attribute_name(:nome_pai) %></th>
                  <th><%#= model_class.human_attribute_name(:rg) %></th>
                  <th><%#= model_class.human_attribute_name(:cpf) %></th>
                  <th width="18%"><%= I18n.t('helpers.actions') %></th>
                  -->
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_jovens.each do |socioeduk_jovem| %>
                <tr>
                  <td><%= prontuario_mask(socioeduk_jovem.id) %></td>
                  <td><%= socioeduk_jovem.nome %></td>
                  <td><%= socioeduk_jovem.apelido %></td>
                  <td><%= socioeduk_jovem.nome_mae %></td>
                  <!--
                  <td><%#= socioeduk_jovem.nome_pai %></td>
                  <td><%#= socioeduk_jovem.rg %></td>
                  <td><%#= formatar_cpf(socioeduk_jovem.cpf) %></td>
                  -->
                  <td>
                    <%= link_to_show(socioeduk_jovem) %>
                    <%= link_to_edit(edit_socioeduk_jovem_path(socioeduk_jovem)) %>
                    <%= link_to_delete(socioeduk_jovem) %>
                  </td>
                </tr>
                <% end %>
                
              </tbody>
            </table>
            <nav class="center">
              <%= paginate @socioeduk_jovens,  left: 5, right: 5%>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
