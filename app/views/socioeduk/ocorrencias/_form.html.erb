<%= form_for(@socioeduk_ocorrencia, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @socioeduk_ocorrencia %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :descricao %>
      <%= f.text_field :descricao, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :socioeduk_tipo_ocorrencia %>
      <%= f.collection_select :socioeduk_tipo_ocorrencia_id, Socioeduk::TipoOcorrencia.all, :id, :descricao, {prompt: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), socioeduk_ocorrencias_path, class: 'btn btn-warning' %>
    </div>
  </div>

<% end %>