<%- model_class = Socioeduk::Ocorrencia -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_ocorrencia', default: Socioeduk::Ocorrencia.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_ocorrencia', default: Socioeduk::Ocorrencia.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_socioeduk_ocorrencia_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:nome) %></th>
                                    <th><%= model_class.human_attribute_name(:descricao) %></th>
                                    <th><%= model_class.human_attribute_name(:socioeduk_tipo_ocorrencia_id) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_ocorrencias.each do |socioeduk_ocorrencia| %>
                <tr>
                                    <td><%= socioeduk_ocorrencia.nome %></td>
                                    <td><%= socioeduk_ocorrencia.descricao %></td>
                                    <td><%= socioeduk_ocorrencia.socioeduk_tipo_ocorrencia.descricao %></td>
                                    <td>
                    <%= link_to_show(socioeduk_ocorrencia) %>
                    <%= link_to_edit(edit_socioeduk_ocorrencia_path(socioeduk_ocorrencia)) %>
                    <%= link_to_delete(socioeduk_ocorrencia) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
