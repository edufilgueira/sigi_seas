<%- model_class = Socioeduk::SubformaEntrada -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_subforma_entrada', default: Socioeduk::SubformaEntrada.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_subforma_entrada', default: Socioeduk::SubformaEntrada.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_socioeduk_subforma_entrada_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:descricao) %></th>
                  <th><%= model_class.human_attribute_name(:forma_entrada) %></th>
                  <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_subforma_entradas.each do |socioeduk_subforma_entrada| %>
                <tr>
                  <td><%= socioeduk_subforma_entrada.descricao %></td>
                  <td><%= socioeduk_subforma_entrada.forma_entrada %></td>
                  <td>
                    <%= link_to_show(socioeduk_subforma_entrada) %>
                    <%= link_to_edit(edit_socioeduk_subforma_entrada_path(socioeduk_subforma_entrada)) %>
                    <%= link_to_delete(socioeduk_subforma_entrada) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
