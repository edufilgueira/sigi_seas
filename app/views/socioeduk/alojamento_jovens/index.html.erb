<%- model_class = Socioeduk::AlojamentoJovem -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_alojamento_jovem', default: Socioeduk::AlojamentoJovem.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_alojamento_jovem', default: Socioeduk::AlojamentoJovem.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= render partial: 'busca' %>
            <%= link_to_new new_socioeduk_alojamento_jovem_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:socioeduk_jovem) %></th>
                                    <th><%= model_class.human_attribute_name(:unidade_socioeducativa) %></th>
                                    <th><%= model_class.human_attribute_name(:socioeduk_bloco) %></th>
                                    <th><%= model_class.human_attribute_name(:socioeduk_quarto) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_alojamento_jovens.each do |socioeduk_alojamento_jovem| %>
                <tr>
                                    <td><%= socioeduk_alojamento_jovem.nome %></td>
                                    <td><%= socioeduk_alojamento_jovem.unidade_socioeducativa.nome%></td>
                                    <td><%= socioeduk_alojamento_jovem.socioeduk_bloco.descricao %></td>
                                    <td><%= socioeduk_alojamento_jovem.socioeduk_quarto.descricao%></td>
                                    <td>
                    <%= link_to_show(socioeduk_alojamento_jovem) %>
                    <%= link_to_edit(edit_socioeduk_alojamento_jovem_path(socioeduk_alojamento_jovem)) %>
                    <%= link_to_delete(socioeduk_alojamento_jovem) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
