<%- model_class = Socioeduk::VisitanteJovem -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_visitante_jovem', default: Socioeduk::VisitanteJovem.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_visitante_jovem', default: Socioeduk::VisitanteJovem.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_socioeduk_visitante_jovem_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:socioeduk_visitante) %></th>
                                    <th><%= model_class.human_attribute_name(:socioeduk_jovem) %></th>
                                    <th><%= model_class.human_attribute_name(:socioeduk_tipo_parentesco) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_visitante_jovens.each do |socioeduk_visitante_jovem| %>
                <tr>
                                    <td><%= socioeduk_visitante_jovem.socioeduk_visitante.nome %></td>
                                    <td><%= socioeduk_visitante_jovem.socioeduk_jovem %></td>
                                    <td><%= socioeduk_visitante_jovem.socioeduk_tipo_parentesco.descricao %></td>
                                    <td>
                    <%= link_to_show(socioeduk_visitante_jovem) %>
                    <%= link_to_edit(edit_socioeduk_visitante_jovem_path(socioeduk_visitante_jovem)) %>
                    <%= link_to_delete(socioeduk_visitante_jovem) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
