<%= form_for(@socioeduk_solicitacao_vaga_infracao, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @socioeduk_solicitacao_vaga_infracao %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :solicitacao_vaga %>
      <%= f.collection_select :solicitacao_vaga_id, Socioeduk::SolicitacaoVaga.all, :id, :nome, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :tipo_natureza %>
      <%= f.text_field :tipo_natureza, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :artigo_infracao %>
      <%= f.collection_select :artigo_infracao_id, Socioeduk::ArtigoInfracao.all, :id, :descricao, {include_blank: '--selecione--'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :pontuacao_continuado %>
      <%= f.check_box :pontuacao_continuado, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :estupro_vulneravel %>
      <%= f.check_box :estupro_vulneravel, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), socioeduk_solicitacao_vaga_infracoes_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
