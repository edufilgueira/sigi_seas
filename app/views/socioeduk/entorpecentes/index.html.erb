<%- model_class = Socioeduk::Entorpecente -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_entorpecente', default: Socioeduk::Entorpecente.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_entorpecente', default: Socioeduk::Entorpecente.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_socioeduk_entorpecente_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:descricao) %></th>
                  <th><%= model_class.human_attribute_name(:unidades_medida) %></th>
                  <th><%= model_class.human_attribute_name(:status) %></th>
                  <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_entorpecentes.each do |socioeduk_entorpecente| %>
                <tr>
                  <td><%= socioeduk_entorpecente.descricao %></td>
                  <td><%= socioeduk_entorpecente.unidades_medida %></td>
                  <td><%= socioeduk_entorpecente.status %></td>
                  <td>
                    <%= link_to_show(socioeduk_entorpecente) %>
                    <%= link_to_edit(edit_socioeduk_entorpecente_path(socioeduk_entorpecente)) %>
                    <%= link_to_delete(socioeduk_entorpecente) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
