<%- model_class = Socioeduk::SaudeJovem -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_saude_jovem', default: Socioeduk::SaudeJovem.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_saude_jovem', default: Socioeduk::SaudeJovem.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= render partial: 'busca' %>
            <%= link_to_new new_socioeduk_saude_jovem_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:socioeduk_jovem) %></th>
                                    <th><%= model_class.human_attribute_name(:cartao_sus) %></th>
                                    <th><%= model_class.human_attribute_name(:altura_estimada) %></th>
                                    <th><%= model_class.human_attribute_name(:peso_estimado) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_saude_jovens.each do |socioeduk_saude_jovem| %>
                <tr>
                                    <td><%= socioeduk_saude_jovem.nome %></td>
                                    <td><%= socioeduk_saude_jovem.cartao_sus %></td>
                                    <td><%= socioeduk_saude_jovem.altura_estimada %></td>
                                    <td><%= socioeduk_saude_jovem.peso_estimado %></td>
                                    <td>
                    <%= link_to_show(socioeduk_saude_jovem) %>
                    <%= link_to_edit(edit_socioeduk_saude_jovem_path(socioeduk_saude_jovem)) %>
                    <%= link_to_delete(socioeduk_saude_jovem) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
