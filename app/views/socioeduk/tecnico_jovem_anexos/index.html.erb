<%- model_class = Socioeduk::TecnicoJovemAnexo -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_tecnico_jovem_anexo', default: Socioeduk::TecnicoJovemAnexo.model_name.human.pluralize.titleize) %>
