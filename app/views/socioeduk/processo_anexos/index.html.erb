<%- model_class = Socioeduk::ProcessoAnexo -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.socioeduk_processo_anexo', default: Socioeduk::ProcessoAnexo.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.socioeduk_processo_anexo', default: Socioeduk::ProcessoAnexo.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_socioeduk_processo_anexo_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:socioeduk_processo) %></th>
                                    <th><%= model_class.human_attribute_name(:anexo) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @socioeduk_processo_anexos.each do |socioeduk_processo_anexo| %>
                <tr>
                                    <td><%= socioeduk_processo_anexo.socioeduk_processo.try(:numero_processo) %></td>
                                    <td><%= link_to "baixar", socioeduk_processo_anexo.anexo.url, target: '_blank?' unless socioeduk_processo_anexo.anexo_file_name.nil? %></td>
                                    <td>
                    <%= link_to_show(socioeduk_processo_anexo) %>
                    <%= link_to_edit(edit_socioeduk_processo_anexo_path(socioeduk_processo_anexo)) %>
                    <%= link_to_delete(socioeduk_processo_anexo) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
