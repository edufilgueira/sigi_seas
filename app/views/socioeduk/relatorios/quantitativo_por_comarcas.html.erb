<%- model_class = UnidadeSocioeducativa -%>
<% content_for :ibox_content do %>
<h1>Quantitativo de jovens por comarcas</h1>
  <table class="table table-hover table-sm sortable">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Masculino</th>
        <th>Feminino</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @quantitativo_por_comarcas.each do |quantitativo_por_comarca| %>
        <tr>
          <td><%= quantitativo_por_comarca.nome %></td>
          <td><%= quantitativo_por_comarca.masculino %></td>
          <td><%= quantitativo_por_comarca.feminino %></td>
          <td><%= quantitativo_por_comarca.total %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>
<%= render partial: 'common/box', locals: { title: I18n.t('activerecord.models.unidade_socioeducativa', default: UnidadeSocioeducativa.model_name.plural.humanize.upcase) } %>

