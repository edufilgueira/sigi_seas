<%- model_class = UnidadeSocioeducativa -%>
<% content_for :ibox_content do %>
<h1>Quantitativo de jovens por atos infracionais</h1>
  <table class="table table-hover table-sm sortable">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Masculino</th>
        <th>Feminino</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @lista.each do |quantitativo_por_ato_infracional| %>
        <tr>
          <td><%= quantitativo_por_ato_infracional[:nome] %></td>
          <td><%= quantitativo_por_ato_infracional[:masculino] %></td>
          <td><%= quantitativo_por_ato_infracional[:feminino] %></td>
          <td><%= quantitativo_por_ato_infracional[:total] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>
<%= render partial: 'common/box', locals: { title: I18n.t('activerecord.models.unidade_socioeducativa', default: UnidadeSocioeducativa.model_name.plural.humanize.upcase) } %>

