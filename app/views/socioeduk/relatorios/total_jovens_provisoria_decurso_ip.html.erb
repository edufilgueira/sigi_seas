<% content_for :title do %>
  <%#= t('.title', default: @total_jovens_provisoria_decurso_ip.class.model_name.human ) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Relatório percentual Decurso de IP</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= form_for(:frm, :url => {action: :total_jovens_provisoria_decurso_ip}, method: 'POST') do |f| %>
              <div class="row">
                <div class="col-sm-4">
                  <%= f.text_field :data_inicial, placeholder: "Data Inicial", class: "form-control maskdata datepicker", value: @data_inicial%>
                </div>
                <div class="col-sm-4">
                  <%= f.text_field :data_final, placeholder: "Data Final", class: "form-control maskdata datepicker", value: @data_final %>
                </div>
                <div class="col-sm-2">
                  <%= f.submit 'Buscar', class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
            <% if(!@total_jovens_provisoria_decurso_ip.nil?) %>
              <div class="row">
                <div class="col-lg-12">
                  <div class="ibox ">
                      <div class="ibox-title">
                          <div class="ibox-tools">
                            <h5>Total de jovens com Decurso de IP</h5>
                            <span class="label label-info"><%= @total_jovens_provisoria_decurso_ip.length %></span>
                          </div>
                      </div>
                      <div class="ibox-content">
                          <h1 class="no-margins"><%= @percentual %>%</h1>
                          <small style="float:left; margin-top: 7px;">Total de jovens internados na <b>PROVISÓRIA</b></small>
                          <div class="stat-percent font-bold text-success" style="float:left; margin-left: 7px; margin-top: 5px;"><%= @total_jovens_provisoria %> <i class="fa fa-bolt"></i></div>
                      </div>
                  </div>
                </div>
              </div>

              <table class="table table-hover table-sm sortable">
                <thead>
                  <tr>
                    <th style="width:60px">Prontuario</th>
                    <th>Nome</th>
                    <th>Processo</th>
                  </tr>
                </thead>
                <tbody>
                  <% @total_jovens_provisoria_decurso_ip.each do |item| %>
                  <tr>
                    <td><%= item&.id_jovem %></td>
                    <td><%= item&.nome %></td>
                    <td>
                      <%= link_to('<i class="glyphicon glyphicon-link"></i>'.html_safe, {controller: :processos, action: :edit, id: item.id_processo}, class: "btn btn-xs btn-success", title: "Processo do adoloscente") %>
                      <%= link_to('<i class="fa fa-info-circle"></i>'.html_safe, {controller: :jovens, action: :show, id: item.id_jovem}, class: "btn btn-info btn-xs btn-success", title: "Informação dos Jovens") %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

