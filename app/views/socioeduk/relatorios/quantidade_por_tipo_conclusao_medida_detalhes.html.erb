<% content_for :title do %>
  <%#= t('.title', default: @quantidade_por_tipo_conclusao_medidas.class.model_name.human ) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Relatório por tipo de conclusão de medidas</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <% if(!@jovens.nil?) %>
              <table class="table table-hover table-sm sortable">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Nome da Mãe</th>
                    <th>Unidade</th>
                    <th width="60px">Informação</th>
                    <th width="60px">Processo</th>
                  </tr>
                </thead>
                <tbody>
                  <% @jovens.each do |jovem| %>
                  <tr>
                    <td><%= jovem&.nome %></td>
                    <td><%= jovem&.nome_mae %></td>
                    <% if jovem.unidade_destino != ' - ' %>
                        <td style="vertical-align: middle;"><%= jovem.unidade_destino %></td>
                    <% elsif %> 
                        <td style="vertical-align: middle;"><%= jovem.unidade_origem %></td>
                    <% end %>
                    <td><%= link_to('<i class="fa fa-info-circle"></i>'.html_safe, {controller: :jovens, action: :show, id: jovem.jovem_id}, class: "btn btn-info btn-sm") %></td>
                    <td><%= link_to('<i class="glyphicon glyphicon-link"></i>'.html_safe, {controller: :processos, action: :edit, id: jovem.processo_id}, class: "btn btn-sm btn-success") %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

