<%= form_for(@grupo_material, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @grupo_material %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-8">
    <%= f.label :codigo, class: 'col-sm-2' %>
      <%= f.text_field :codigo, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
    <%= f.label :nome, class: 'col-sm-2' %>
      <%= f.text_field :nome, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), grupo_materiais_path, class: 'btn' %>
    </div>
  </div>
<% end %>
