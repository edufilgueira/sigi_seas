<%= form_for(@local_armazenamento, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @local_armazenamento %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :descricao_local %>
      <%= f.text_field :descricao_local, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :unidade_socioeducativa %>
      <%= f.collection_select :unidade_socioeducativa_id, UnidadeSocioeducativa.all , :id , :nome, {prompt: "selecione"} ,{class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), local_armazenamentos_path, class: 'btn' %>
    </div>
  </div>
<% end %>
