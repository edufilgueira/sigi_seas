<%= form_for(@solicitacao_patrimonio, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @solicitacao_patrimonio %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-4 col-offset-1">
      <%= f.label :numero_processo %>
      <%= f.text_field :numero_processo, class: 'form-control mask-numero-viproc' %>
    </div>
  </div>

  <%= f.hidden_field :solicitante, value: current_usuario.id %>

  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :justificativa, class: "required" %>
      <%= f.text_area :justificativa, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :observacao %>
      <%= f.text_area :observacao, class: 'form-control' %>
    </div>
  </div>

<h2>Lista de Item</h2>
  <section>
    <div class="col-sm-10">
      <div class="form-group table-nested-title">
        <div class="col-sm-11">Item</div>
        <div class="col-sm-1">Ação</div>
      </div>
        <%= f.nested_fields_for :itens_solicitacao_patrimonios do |ff| %>
          <div class="form-group">
            <div class="col-sm-8 col-offset-1">
              <%= ff.label :item_patrimonio_id, class: "required" %>
              <%= ff.collection_select :item_patrimonio_id, ItemPatrimonio.all, :id, :nome, {prompt: '---selecione----'}, class: 'form-control select2' %>
            </div>
            <div class="col-sm-2 col-offset-1">
              <%= ff.label :quantidade_solicitada, class: "required" %>
              <%= ff.number_field :quantidade_solicitada, class: 'form-control' %>
            </div>
            <div class="col-sm-1 col-offset-1">
              <%= ff.label "Excluir" %><br/>
              <%= ff.check_box :_destroy, class: 'deletar-nested', style: 'margin-left: 5px; margin-bottom: 8px;'%>
            </div>
          </div>
        <% end %>
        <%= f.add_nested_fields_link :itens_solicitacao_patrimonios, 'Adicionar', class:"btn btn-success" %>
    </div>
  </section>

  <div class="form-group">
    <div class="col-sm-10">
      <br>
      <%= f.submit nil, class: 'btn btn-primary', id: 'btn-salvar', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), solicitacao_patrimonios_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
