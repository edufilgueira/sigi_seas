<% content_for :title do %>
  <%= t('.title', default: @patrimonio.class.model_name.human ) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('.title', default: @patrimonio.class.model_name.human ) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th><%= Patrimonio.human_attribute_name :grupo_patrimonio %></th>
                  <th><%= Patrimonio.human_attribute_name :classe_patrimonio %></th>
                  <th><%= Patrimonio.human_attribute_name :item_patrimonio %></th>
                  <th><%= Patrimonio.human_attribute_name :descricao %></th>
                  <th><%= Patrimonio.human_attribute_name :tipo_patrimonio %></th>
                  <th><%= Patrimonio.human_attribute_name :tombo_anterior %></th>
                  <th><%= Patrimonio.human_attribute_name :origem_anterior %></th>
                  <th><%= Patrimonio.human_attribute_name :tombo_atual %></th>
                  <th><%= Patrimonio.human_attribute_name :origem_atual %></th>
                  <th><%= Patrimonio.human_attribute_name :valor %></th>
                  <th><%= Patrimonio.human_attribute_name :ciclo_vida_util %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.item_patrimonio.classe_patrimonio.grupo_patrimonio %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.item_patrimonio.classe_patrimonio %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.item_patrimonio %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.item_patrimonio.descricao %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.item_patrimonio.tipo_patrimonio %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.tombo_anterior %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.origem_anterior %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.tombo_atual %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.origem_atual %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.valor %></td>
                  <td style="min-width: 90px; word-break: break-all;"><%= @patrimonio.ciclo_vida_util %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to('Listar', patrimonios_path, class: 'btn btn-default') %>
<%= link_to 'Editar', edit_patrimonio_path(@patrimonio), class: 'btn btn-detran-primary' %>
