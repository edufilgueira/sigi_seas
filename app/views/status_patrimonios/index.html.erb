<%- model_class = StatusPatrimonio -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.status_patrimonio', default: StatusPatrimonio.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.status_patrimonio', default: StatusPatrimonio.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_status_patrimonio_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:nome) %></th>
                                    <th><%= model_class.human_attribute_name(:descricao) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @status_patrimonios.each do |status_patrimonio| %>
                <tr>
                                    <td><%= status_patrimonio.nome.upcase %></td>
                                    <td><%= status_patrimonio.descricao.upcase %></td>
                                    <td>
                    <%= link_to_show(status_patrimonio) %>
                    <%= link_to_edit(edit_status_patrimonio_path(status_patrimonio)) %>
                    <%= link_to_delete(status_patrimonio) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
