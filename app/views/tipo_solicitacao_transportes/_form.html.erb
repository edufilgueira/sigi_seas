<%= form_for(@tipo_solicitacao_transporte, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @tipo_solicitacao_transporte %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :tipo %>
      <%= f.text_field :tipo, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), tipo_solicitacao_transportes_path, class: 'btn' %>
    </div>
  </div>
<% end %>
