<%- model_class = PostoCombustivel -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.posto_combustivel', default: PostoCombustivel.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.posto_combustivel', default: PostoCombustivel.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_posto_combustivel_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:nome) %></th>
                                    <th><%= model_class.human_attribute_name(:cnpj) %></th>
                                    <th><%= model_class.human_attribute_name(:rua) %></th>
                                    <th><%= model_class.human_attribute_name(:numero) %></th>
                                    <th><%= model_class.human_attribute_name(:bairro) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @posto_combustiveis.each do |posto_combustivel| %>
                <tr>
                                    <td><%= posto_combustivel.nome %></td>
                                    <td><%= posto_combustivel.cnpj %></td>
                                    <td><%= posto_combustivel.rua %></td>
                                    <td><%= posto_combustivel.numero %></td>
                                    <td><%= posto_combustivel.bairro %></td>
                                    <td>
                    <%= link_to_show(posto_combustivel) %>
                    <%= link_to_edit(edit_posto_combustivel_path(posto_combustivel)) %>
                    <%= link_to_delete(posto_combustivel) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
