<%= form_for(@gestao_demandas_solicitacao, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @gestao_demandas_solicitacao %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :titulo %>
      <%= f.text_field :titulo, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :descricao %>
      <%= f.text_area :descricao, class: 'form-control' %>
    </div>
  </div>

  <%= f.hidden_field :usuario_id, value: current_usuario.id %>

  <%= hidden_field_tag :url_path, @url_path %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%#= link_to I18n.t('helpers.links.cancel'), gestao_demandas_solicitacoes_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>

<%= link_to "Listar Solicitações", gestao_demandas_solicitacoes_path, class: "btn btn-success", target: '_blank' %>