<%- model_class = Recursoshumanos::Cargo -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.recursoshumanos_cargo', default: Recursoshumanos::Cargo.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title excluir_da_impressao">
        <h5><%=  I18n.t('activerecord.models.recursoshumanos_cargo', default: Recursoshumanos::Cargo.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">

            <div class="clients-list">
              <ul class="nav nav-tabs">
                <% @cargos_group_by_contratos.keys.each_with_index do |key, index| %>
                  <% if index == 0 %>
                    <li class="active"><a data-toggle="tab" href="#tab-<%= key.gsub(' ', '_').to_param %>" aria-expanded="true"><i class="fa fa-user"></i> <%= key %></a></li>
                  <% else %>
                    <li class=""><a data-toggle="tab" href="#tab-<%= key.gsub(' ', '_').to_param %>"><i class="fa fa-user"></i> <%= key %></a></li>
                  <% end %>
                <% end %>
              </ul>
            </div>

            <div class="tab-content">
              <% @ativador = true %>
              <% @cargos_group_by_contratos.each do |key,cargos| %>
                  <% if @ativador == true %>
                      <div id="tab-<%= key.gsub(' ', '_').to_param %>" class="tab-pane active">
                  <% else %>
                      <div id="tab-<%= key.gsub(' ', '_').to_param %>" class="tab-pane">
                  <% end %>
                  <% @ativador = false %>
                      <div class="full-height-scroll">
                          <div class="table-responsive">
                              <table class="table table-striped table-hover">
                                  <thead>
                                      <tr>
                                          <th><%= model_class.human_attribute_name(:nome) %></th>
                                          <th><%= model_class.human_attribute_name(:quantidade) %></th>
                                          <th><%= I18n.t('helpers.label.campo_calculado.quantidade_cargo_contratado') %></th>
                                          <th><%= I18n.t('helpers.label.campo_calculado.quantidade_cargo_disponivel') %></th>
                                          <th><%= model_class.human_attribute_name(:recursoshumanos_contratos) %></th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                      <% cargos.each do |cargo| %>
                                          <tr>
                                              <td><%= cargo.rca_nome %></td>
                                              <td><%= cargo.quantidade %></td>
                                              <td><%= cargo.quantidade_cargo_contratado %></td>
                                              <td><%= cargo.quantidade - cargo.quantidade_cargo_contratado %></td>
                                              <td><%= cargo.rtl_nome %> <%= cargo.doe_ce %></td>
                                          </tr>
                                      <% end %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>
              <% end %>
            </div>




