<%= form_for(@recursoshumanos_aditivo, html: { class: 'form-horizontal', multipart: true }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @recursoshumanos_aditivo %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :recursoshumanos_contrato, class: 'required' %>
      <%= f.collection_select :recursoshumanos_contrato_id, Recursoshumanos::Contrato.all, :id ,:to_s,{prompt: 'Selecione'}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :recursoshumanos_justificativa_aditivo, class: 'required' %>
      <%= f.collection_select :recursoshumanos_justificativa_aditivo_id, Recursoshumanos::JustificativaAditivo.all, :id ,:descricao,{prompt: 'Selecione'}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :numero_processo , class: 'required'%>
      <%= f.text_field :numero_processo, class: 'form-control' %>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :data, class: 'required' %>
      <%= f.text_field :data,  class: 'form-control datepicker ' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :descricao, class: 'required' %>
      <%= f.text_field :descricao, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :anexo, class: 'required' %>
      <%= f.file_field :anexo,  class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), recursoshumanos_aditivos_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
