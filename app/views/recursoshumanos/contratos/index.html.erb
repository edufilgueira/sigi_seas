<%- model_class = Recursoshumanos::Contrato -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.recursoshumanos_contrato', default: Recursoshumanos::Contrato.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.recursoshumanos_contrato', default: Recursoshumanos::Contrato.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_recursoshumanos_contrato_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:recursoshumanos_tipo_legal) %></th>
                                    <th><%= model_class.human_attribute_name(:numero) %></th>
                                    <th><%= model_class.human_attribute_name(:ano) %></th>
                                    <th><%= model_class.human_attribute_name(:doe_ce) %></th>
                                    <th><%= model_class.human_attribute_name(:data_doe_ce) %></th>
                                    <th><%= model_class.human_attribute_name(:pagina_doe_ce) %></th>
                                    <th><%= model_class.human_attribute_name(:inicio_vigencia) %></th>
                                    <th><%= model_class.human_attribute_name(:final_vigencia) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @recursoshumanos_contratos.each do |recursoshumanos_contrato| %>
                <tr>
                                    <td><%= recursoshumanos_contrato.recursoshumanos_tipo_legal %></td>
                                    <td><%= recursoshumanos_contrato.numero %></td>
                                    <td><%= recursoshumanos_contrato.ano %></td>
                                    <td><%= recursoshumanos_contrato.doe_ce %></td>
                                    <td><%= recursoshumanos_contrato.data_doe_ce %></td>
                                    <td><%= recursoshumanos_contrato.pagina_doe_ce %></td>
                                    <td><%= recursoshumanos_contrato.inicio_vigencia %></td>
                                    <td><%= recursoshumanos_contrato.final_vigencia %></td>
                                    <td>
                    <%= link_to_show(recursoshumanos_contrato) %>
                    <%= link_to_edit(edit_recursoshumanos_contrato_path(recursoshumanos_contrato)) %>
                    <%= link_to_delete(recursoshumanos_contrato) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
