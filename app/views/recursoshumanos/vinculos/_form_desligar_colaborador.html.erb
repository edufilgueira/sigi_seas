<%= form_for(:frm, url: { action: :desligar_colaborador }, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.hidden_field :vinculo_id, value: params[:vinculo_id] %>
  <div class="form-group">
    <div class="col-sm-4 col-offset-1">
      <%= f.label :data_fim, "Data desligamento" %>
      <%= f.text_field :data_fim, class: 'form-control datepicker' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
    </div>
  </div>
<% end %>
