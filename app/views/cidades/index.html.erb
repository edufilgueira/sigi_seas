<%- model_class = Cidade -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.cidade', default: Cidade.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.cidade', default: Cidade.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_cidade_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:nome) %></th>
                                    <th><%= model_class.human_attribute_name(:capital) %></th>
                                    <th><%= model_class.human_attribute_name(:estado) %></th>
                                    <th><%= model_class.human_attribute_name(:regiao) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @cidades.each do |cidade| %>
                  <% if cidade.regiao_pai.nil?%>
                    <tr style="color: #900;">
                                      <td><%= cidade.nome %></td>
                                      <td><%= cidade.capital %></td>
                                      <td><%= cidade.estado.nome %></td>
                                      <td><%= cidade.regiao_pai&.nome %></td>
                                      <td>
                      <%= link_to_show(cidade) %>
                      <%= link_to_edit(edit_cidade_path(cidade)) %>
                      <%= link_to_delete(cidade) %>
                    </tr>
                  <% else %>
                    <tr>
                                      <td><%= cidade.nome %></td>
                                      <td><%= cidade.capital %></td>
                                      <td><%= cidade.estado.nome %></td>
                                      <td><%= cidade.cidade&.nome %></td>
                                      <td>
                      <%= link_to_show(cidade) %>
                      <%= link_to_edit(edit_cidade_path(cidade)) %>
                      <%= link_to_delete(cidade) %>
                    </tr>
                  <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
