<% content_for :title do %>
  <%= t('.title', default: @cidade.class.model_name.human ) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('.title', default: @cidade.class.model_name.human ) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <table class="table table-condensed">
              <thead>
                <tr>
                                    <th><%= Cidade.human_attribute_name :nome %></th>
                                    <th><%= Cidade.human_attribute_name :capital %></th>
                                    <th><%= Cidade.human_attribute_name :estado %></th>
                                  </tr>
              </thead>
              <tbody>
                <tr>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @cidade.nome %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @cidade.capital %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @cidade.estado.nome %></td>
                                  </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to('Listar', cidades_path, class: 'btn btn-default') %>
<%= link_to 'Editar', edit_cidade_path(@cidade), class: 'btn btn-detran-primary' %>
