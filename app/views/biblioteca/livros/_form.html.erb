<%= form_for(@biblioteca_livro, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @biblioteca_livro %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :titulo %>
      <%= f.text_field :titulo, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :sinopse %>
      <%= f.text_area :sinopse, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :assunto1 %>
      <%= f.text_field :assunto1, class: 'form-control' %>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :assunto2 %>
      <%= f.text_field :assunto2, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :biblioteca_autor %>
      <%= f.collection_select :biblioteca_autor_id, Biblioteca::Autor.all, :id ,:nome, {pronpt: 'Selecione'}, {class: 'form-control'} %>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :biblioteca_local %>
      <%= f.collection_select :biblioteca_local_id, Biblioteca::Local.all, :id ,:nome, {pronpt: 'Selecione'}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :biblioteca_local_publicacao %>
      <%= f.collection_select :biblioteca_local_publicacao_id, Biblioteca::LocalPublicacao.all, :id ,:descricao, {pronpt: 'Selecione'}, {class: 'form-control'} %>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :biblioteca_editora %>
      <%= f.collection_select :biblioteca_editora_id, Biblioteca::Editora.all, :id ,:descricao, {pronpt: 'Selecione'}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :data_publicacao %>
      <div class='input-group date'>
        <%= f.text_field :data_publicacao, class: 'form-control datepicker' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :paginacao %>
      <%= f.number_field :paginacao, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <div class="form-group">
        <div class="col-sm-4 col-offset-1">
          <%= f.label :css_cdu %>
          <%= f.text_field :css_cdu, class: 'form-control' %>
        </div>
        <div class="col-sm-4 col-offset-1">
          <%= f.label :isbn %>
          <%= f.text_field :isbn, class: 'form-control' %>
        </div>
        <div class="col-sm-4 col-offset-1">
          <%= f.label :cutter %>
          <%= f.text_field :cutter, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :status %>
      <%= f.check_box :status, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), biblioteca_livros_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
