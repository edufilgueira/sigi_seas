<%- model_class = Biblioteca::Livro -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.biblioteca_livro', default: Biblioteca::Livro.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.biblioteca_livro', default: Biblioteca::Livro.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_biblioteca_livro_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th>#</th>
                                    <th><%= model_class.human_attribute_name(:titulo) %></th>
                                    <th><%= model_class.human_attribute_name(:biblioteca_autor) %></th>
                                    <th><%= model_class.human_attribute_name(:biblioteca_local) %></th>
                                    <th><%= model_class.human_attribute_name(:status) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @biblioteca_livros.each do |biblioteca_livro| %>
                <tr>
                                    <td><%= biblioteca_livro.id %></td>
                                    <td><%= biblioteca_livro.titulo %></td>
                                    <td><%= biblioteca_livro.biblioteca_autor %></td>
                                    <td><%= biblioteca_livro.biblioteca_local %></td>
                                    <td><%= biblioteca_livro.status %></td>
                                    <td>
                    <%= link_to_show(biblioteca_livro) %>
                    <%= link_to_edit(edit_biblioteca_livro_path(biblioteca_livro)) %>
                    <%= link_to_delete(biblioteca_livro) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
