<%= form_for(@biblioteca_emprestimo, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @biblioteca_emprestimo %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :biblioteca_livro %>
      <%= f.collection_select :biblioteca_livro_id, Biblioteca::Livro.all, :id ,:titulo, {pronpt: 'Selecione'}, {class: 'form-control select2'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :pessoa %>
      <%= f.collection_select :pessoa_id, Pessoa.all, :id ,:nome, {pronpt: 'Selecione'}, {class: 'form-control select2'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :data %>
      <div class='input-group date'>
        <%= f.text_field :data, class: 'form-control datepicker' %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="col-sm-5 col-offset-1">
      <%= f.label :data_retorno %>
      <div class='input-group date'>
        <%= f.text_field :data_retorno, class: 'form-control datepicker' %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :nota %>
      <%= f.text_area :nota, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.hidden_field :status, :value => 1 %>
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), biblioteca_emprestimos_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
