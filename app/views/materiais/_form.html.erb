<%= form_for(@material, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @material %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= label_tag :grupo_material, "Grupo" %>
      <%= select_tag :grupo_material_id, options_from_collection_for_select(GrupoMaterial.all, :id, :nome), {prompt: "Selecione" ,class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :classe_material %>
      <%= f.collection_select :classe_material_id, ClasseMaterial.all, :id, :nome, {prompt: "selecione"} ,class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :descricao %>
      <%= f.text_area :descricao, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :unidades_medida %>
      <%= f.collection_select :unidades_medida_id, UnidadesMedida.all , :id, :nome, {prompt: "Selecione"}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :quantidade %>
      <%= f.text_field :quantidade, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :local_armazenamento %>
      <%= f.collection_select :local_armazenamento_id, LocalArmazenamento.all, :id, :descricao_local, {prompt: 'Selecione'}, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), materiais_path, class: 'btn' %>
    </div>
  </div>
<% end %>
