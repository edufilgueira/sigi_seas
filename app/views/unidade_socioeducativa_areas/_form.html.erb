<%= form_for(@unidade_socioeducativa_area, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @unidade_socioeducativa_area %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :unidade_socioeducativa %>
      <%= f.collection_select :unidade_socioeducativa_id,  UnidadeSocioeducativa.all, :id, :sigla_nome , {include_blank: '--selecione--'}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :area %>
      <%= f.collection_select :area_id,  Area.all, :id, :nome , {include_blank: '--selecione--'}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), unidade_socioeducativa_areas_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
