<%= form_for(@servico, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @servico %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-8">
    <%= f.label :eixo_id, class: 'required' %>
      <%= f.select :eixo_id, Eixo.all.collect{ |a| [a.nome, a.id] }, {include_blank: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
    <%= f.label :nome, class: 'required' %>
      <%= f.text_field :nome, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), servicos_path, class: 'btn' %>
    </div>
  </div>
<% end %>
