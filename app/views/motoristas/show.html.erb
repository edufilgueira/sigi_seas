<% content_for :title do %>
  <%= t('.title', default: @motorista.class.model_name.human ) %>
<% end -%>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('.title', default: @motorista.class.model_name.human ) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <table class="table table-condensed">
              <thead>
                <tr>
                                    <th><%= Motorista.human_attribute_name :nome %></th>
                                    <th><%= Motorista.human_attribute_name :numero %></th>
                                    <th><%= Motorista.human_attribute_name :registro %></th>
                                    <th><%= Motorista.human_attribute_name :validade %></th>
                                    <th><%= Motorista.human_attribute_name :categoria %></th>
                                    <th><%= Motorista.human_attribute_name :obs %></th>
                                  </tr>
              </thead>
              <tbody>
                <tr>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.pessoa %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.numero %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.registro %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.validade %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.categoria %></td>
                                    <td style="min-width: 90px; word-break: break-all;"><%= @motorista.obs %></td>
                                  </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to('Listar', motoristas_path, class: 'btn btn-default') %>
<%= link_to 'Editar', edit_motorista_path(@motorista), class: 'btn btn-detran-primary' %>
