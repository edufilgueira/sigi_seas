<%= form_for(@motorista, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @motorista %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
    <%= f.label :Motorista %>
    <%= f.collection_select :pessoa_id, @motoristas, :id, :nome, {prompt: "selecione"},  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :numero %>
      <%= f.text_field :numero, class: 'form-control' %>
    </div>
     <div class="col-sm-5 col-offset-1">
      <%= f.label :registro %>
      <%= f.text_field :registro, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-5 col-offset-1">
      <%= f.label :validade %>
      <%= f.text_field :validade, class: 'form-control datepicker ' %>
    </div>
     <div class="col-sm-5 col-offset-1">
      <%= f.label :categoria %>
      <%= f.text_field :categoria, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :obs %>
      <%= f.text_area :obs, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), motoristas_path, class: 'btn' %>
    </div>
  </div>
<% end %>
