
<%- model_class = MarcaVeiculo -%>
<% content_for :title do %>
<%= raw I18n.t('activerecord.models.marca_veiculo', default: MarcaVeiculo.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= raw I18n.t('activerecord.models.marca_veiculo', default: MarcaVeiculo.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_marca_veiculo_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                                    <th><%= model_class.human_attribute_name(:marca) %></th>
                                    <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @marca_veiculos.each do |marca_veiculo| %>
                <tr>
                                    <td><%= marca_veiculo.marca %></td>
                                    <td>
                    <%= link_to_show(marca_veiculo) %>
                    <%= link_to_edit(edit_marca_veiculo_path(marca_veiculo)) %>
                    <%= link_to_delete(marca_veiculo) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
