<%= form_for(@modelos_marca, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @modelos_marca %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :modelo %>
      <%= f.text_field :modelo, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :marca_veiculo_id %>
      <%= f.collection_select :marca_veiculo_id, MarcaVeiculo.all, :id, :marca, {prompt:"selecione"} ,{class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), modelos_marcas_path, class: 'btn' %>
    </div>
  </div>
<% end %>
