<%= form_for(@funcao_pessoa, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @funcao_pessoa %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :funcao %>
      <%= f.collection_select :funcao_id, Funcao.all, :id, :nome, {prompt: 'Selecione'}, {class: 'form-control'} %>
      <%#= f.select :funcao_id, options_for_select(Funcao.joins(area: :unidade_socioeducativa).all.collect {|e| [(e&.area&.unidade_socioeducativa&.sigla + '-' + e.nome), e.id]}, {prompt: "selecione"}), {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-9">
      <%= f.label :pessoa %>
      <%= f.collection_select :pessoa_id, Pessoa.all, :id, :nome,  {prompt: 'Selecione'}, {class: 'form-control'} %>
    </div>
    <div class="col-sm-1 col-offset-1">
      <%= f.label :status %>
      <%= f.check_box :status, class: 'form-control', style: 'margin-left: 5px; margin-bottom: 8px;' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), funcao_pessoas_path, class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>