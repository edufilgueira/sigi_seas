<%= form_for(@material_movimentacao, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @material_movimentacao %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :material %>
      <%= f.collection_select :material_id, Material.all , :id, :nome, {include_blank: 'Selecione'}, class: 'form-control select2' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :unidade_socioeducativa %>
      <%= f.select :unidade_socioeducativa_id, UnidadeSocioeducativa.all.collect{ |a| [a.sigla_nome, a.id] }, {include_blank: 'Selecione'}, class: 'form-control select2' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :quantidade_movimentada %>
      <%= f.number_field :quantidade_movimentada, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%= f.label :tipo_movimentacao %>
      <%= f.collection_select :tipo_movimentacao, @material_movimentacao.tipos_movimentacoes_opcoes , :to_s, :to_s, {include_blank: 'Selecione'}, class: 'form-control select2' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), material_movimentacoes_path, class: 'btn' %>
    </div>
  </div>
<% end %>
