<%= form_for(@gestor_eixo, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @gestor_eixo %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :eixo_id, class: 'required' %>
      <%= f.select :eixo_id, Eixo.all.collect{ |a| [a.nome, a.id] }, {include_blank: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
       <%= f.label :pessoa_id, class: 'required' %>
      <%= f.select :pessoa_id, Pessoa.all.collect{ |a| [a.nome, a.id] }, {include_blank: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-4 col-offset-1">
      <%= f.label :data_inicio, class: 'required' %>
      <%= f.text_field :data_inicio, class: 'form-control datepicker' %>
    </div>
    <div class="col-sm-4 col-offset-1">
      <%= f.label :data_termino, class: 'required' %>
      <%= f.text_field :data_termino, class: 'form-control datepicker' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.check_box :ativo, {}, true, false %>
      <%= f.label :ativo %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), gestores_eixos_path, class: 'btn' %>
    </div>
  </div>
<% end %>
