<%= form_for(@unidades_medida, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @unidades_medida %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <%= f.label :nome, class: 'col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :nome, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sigla, class: 'col-sm-2' %>
    <div class="col-sm-8">
      <%= f.text_field :sigla, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), unidades_medidas_path, class: 'btn' %>
    </div>
  </div>
<% end %>
