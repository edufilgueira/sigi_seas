<%= form_for(@capacidade_original, html: { class: 'form-horizontal' }) do |f| %>
  <%#= render 'layouts/error_messages', model_name: @capacidade_original %>
  <%= render 'layouts/message_required' %>
  <div class="form-group">
    <div class="col-sm-6 col-offset-1">
      <%= f.label :unidade_socioeducativa %>
      <%= f.select :unidade_socioeducativa_id, UnidadeSocioeducativa.all.collect{|a| [a.sigla_nome, a.id]}, {include_blank: 'Selecione'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.label :capacidade %>
      <%= f.text_field :capacidade, class: 'form-control' %>
    </div>
    <div class="col-sm-3">
      <%= f.label :data_referencia %>
      <%= f.text_field :data_referencia, class: 'form-control datepicker' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%= link_to I18n.t('helpers.links.cancel'), capacidades_originais_path, class: 'btn' %>
    </div>
  </div>
<% end %>
