<%- model_class = ItemPatrimonio -%>
<% content_for :title do %>
<%=  I18n.t('activerecord.models.item_patrimonio', default: ItemPatrimonio.model_name.human.pluralize.titleize) %>
<% end -%>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%=  I18n.t('activerecord.models.item_patrimonio', default: ItemPatrimonio.model_name.human.pluralize.titleize) %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= link_to_new new_item_patrimonio_path %>
            <table class="table table-hover table-sm">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:grupo_patrimonio) %></th>
                  <th><%= model_class.human_attribute_name(:classe_patrimonio) %></th>
                  <th><%= model_class.human_attribute_name(:tipo_patrimonio) %></th>
                  <th><%= model_class.human_attribute_name(:codigo) %></th>
                  <th><%= model_class.human_attribute_name(:nome) %></th>
                  <th><%= model_class.human_attribute_name(:descricao) %></th>
                  <th width="18%"><%= I18n.t('helpers.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @item_patrimonios.each do |item_patrimonio| %>
                  <tr>
                    <td><%= item_patrimonio.classe_patrimonio.grupo_patrimonio.to_s.upcase %></td>
                    <td><%= item_patrimonio.classe_patrimonio.to_s.upcase %></td>
                    <td><%= item_patrimonio.tipo_patrimonio.to_s.upcase %></td>
                    <td><%= item_patrimonio.codigo %></td>
                    <td><%= item_patrimonio.nome.upcase %></td>
                    <td><%= item_patrimonio.descricao.upcase %></td>
                    <td>
                      <%= link_to_show(item_patrimonio) %>
                      <%= link_to_edit(edit_item_patrimonio_path(item_patrimonio)) %>
                      <%= link_to_delete(item_patrimonio) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @item_patrimonios %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
